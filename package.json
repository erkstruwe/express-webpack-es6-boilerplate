{
  "name": "javascript-101",
  "version": "0.1.0",
  "description": "A basic express and webpack boilerplate",
  "main": "server/index.mjs",
  "scripts": {
    "postinstall": "webpack --mode production",
    "start": "cross-env NODE_ENV=production node --experimental-modules server/index.mjs",
    "start:dev": "concurrently --prefix name --names server,client \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:server": "forever --minUptime 1000 --spinSleepTime 1000 --watch --watchDirectory server -c \"node --experimental-modules server/index.mjs\" ./",
    "start:dev:client": "webpack-dev-server --hot",
    "lint": "eslint --ignore-pattern public/generated .",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint",
    "preversion": "npm test",
    "postversion": "git push origin master --follow-tags"
  },
  "author": "Erk Struwe <estruwe@estruwe.de>",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "babel-loader": "^8.0.4",
    "babel-polyfill": "^6.26.0",
    "bootstrap": "^4.1.3",
    "compression": "^1.7.3",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "lodash": "^4.17.11",
    "node-sass": "^4.10.0",
    "pug": "^2.0.3",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "eslint": "^5.9.0",
    "forever": "^0.15.3",
    "webpack-dev-server": "^3.1.10"
  }
}
