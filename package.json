{
  "name": "javascript-101",
  "version": "0.1.0",
  "description": "A basic express and webpack boilerplate",
  "main": "server.js",
  "scripts": {
    "postinstall": "webpack --mode production",
    "start": "node server.js",
    "start:dev": "concurrently --prefix name --names server,client \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:server": "nodemon --ignore client --ignore views --ignore public",
    "start:dev:client": "webpack-dev-server --hot",
    "lint": "eslint .",
    "test": "npm run lint"
  },
  "author": "Erk Struwe <estruwe@estruwe.de>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.4",
    "pug": "^2.0.3",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "eslint": "^5.9.0",
    "nodemon": "^1.18.6",
    "webpack-dev-server": "^3.1.10"
  }
}
